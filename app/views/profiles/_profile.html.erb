<%= link_to profile_path(profile), class: "col-sm-12 col-md-6 col-lg-6 col-xl-4", style: "text-decoration: none;" do %>
  <div class="card mb-3" style="width: 100%;" id="<%= dom_id profile %>">
    <img src="https://picsum.photos/900/400" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= profile.first_name %> <%= profile.last_name %></h5>
      <p class="card-text"><%= profile.title %></p>
      <p><small><%= profile.price %></small> <%= profile.location %></p>
    </div>
  </div>
<% end %>