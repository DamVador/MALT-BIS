<p style="color: green"><%= notice %></p>

<form class="mb-5 px-5 border-bottom border-top-0" hx-get="<%= root_path %>" hx-target="#profiles" hx-swap="outerHTML" hx-select="#profiles">
  <%= hidden_field_tag(:authenticity_token, form_authenticity_token) %>
  <div class="search-form row my-3">
        <div class="col-md-3">
            <input class="form-control me-2 rounded-pill" type="search" name="category" placeholder="Essayez 'Java', 'Développeur Backend' ..." aria-label="Search">
        </div>
        <div class="col-md-3">
            <input class="form-control me-2 rounded-pill" type="search" name="location" placeholder="Lieu de la mission" aria-label="Search">
        </div>
        <div class="col-md-3">
        </div>
        <div class="col-md-3 d-flex justify-content-end">
            <button class="btn btn-outline-success rounded-pill" type="submit">Trouver un freelance</button>
        </div>
  </div>
</form>

<div class="containerr d-flex mt-3" style="margin: 15px;">
  <div class="filter pe-5" style="width: 350px;">
    <form>
      <div class="card" style="width: 100%;">
        <div class="card-body">
          <h4 class="card-title">Filtres</h4>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            Tarif / jour
            <label for="customRange2" class="form-label">Example range</label>
            <input type="range" class="form-range" min="100" max="1000" id="customRange2">
          </li>
          <li class="list-group-item">
            Niveau d'expérience
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="exp-1">
              <label class="form-check-label" for="exp-1">
                0-2 ans
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="exp-2">
              <label class="form-check-label" for="exp-2">
                3-7 ans
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="exp-3">
              <label class="form-check-label" for="exp-3">
                8 ans et +
              </label>
            </div>
          </li>
          <li class="list-group-item">Catégorie</li>
        </ul>
        <div class="card-body">
          <a href="#" class="card-link">Card link</a>
          <a href="#" class="card-link">Another link</a>
        </div>
      </div>
    </form>
  </div>

  <div class="profiles" style="width: 80%; paddin-left: 10px; padding-right: 10px;">
      <div class="row gx-3 d-flex flex-wrap" id="profiles">
          <% if @profiles %>
            <% @profiles.each do |profile| %>
              <%= render profile %>
            <% end %>
          <% end %>
      </div>

      <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
          <div class="pager d-flex" style="justify-content: center;">
              <div class="me-3 previous <%= @page == 0 ? 'disabled' : '' %>" id="previous">
                  <button hx-get="<%= profiles_path(page: @page - 1) %>" hx-select-oob="#profiles:outerHTML,#previous:outerHTML, #next:outerHTML" class="btn btn-primary <%= @page == 0 ? 'disabled' : '' %>">
                      Précédent
                  </button>
              </div>
              
              <div class="next" id="next">
                  <button hx-get="<%= profiles_path(page: @page + 1) %>" hx-select-oob="#profiles:outerHTML,#previous:outerHTML, #next:outerHTML" class="btn btn-primary <%= @page == @page_number ? 'disabled' : '' %>">
                      Suivant
                  </button>
              </div>
              
          </div>
        </div>
         <div class="col-4"></div>
      </div>
  </div>
</div>

